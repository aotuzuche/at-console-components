{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "at-console-components": ["components/index.tsx"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./typings"],
    "declaration": true,
    "rootDir": "./",
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "lib", "es", "examples"],
  "include": ["components", "types"]
}
